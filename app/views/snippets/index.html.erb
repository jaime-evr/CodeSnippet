<h1>Snippet</h1>
<% @snippets.each do |snippet| %>
  <p><%= link_to snippet.id.ordinalize, snippet_path(snippet) %> snippet</p>
<%end%>
<%= form_for @snippet do |f| %>
  <%= f.select :language, options_for_select(%w[ruby javascript java]) %><br>
  <%= f.text_area :plain_code %>
  <%= f.submit %>
<%end%>
